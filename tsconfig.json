{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2020",
    "declaration": true,
    "declarationDir": "typings",
    "newLine": "lf"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test/**/*", ".idea/**/*", ".eslintignore", ".eslintrc.js", ".gitignore", ".prettierrc.js"]
}
